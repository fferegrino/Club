@model Club.ViewModels.TopicViewModel

@{
    ViewBag.Title = "Añadir tema";
}


<h2>@ViewBag.Title</h2>
<form method="post" novalidate>
    <div asp-validation-sumnmary="ValidationSummary.ModelOnly"></div>

    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

    </div>

    <div class="row">
        <div class="form-group col-md-12">
                <label asp-for="UserLevel"></label>
                <select asp-for="UserLevelId" class="form-control" asp-items="@ViewBag.SelectUserLevels"></select>
        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-success" />
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap-rating/bootstrap-rating.min.js"></script>
}

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.min.css" />
}