@model Club.ViewModels.ComplexUserViewModel
@{
    ViewBag.Title = Model.Username;
}

<div>
    <div>
        <div class="row">
            <div class="col-lg-12">
                <h2>@Model.Username</h2>
                <input type="hidden" id="id" value="@Model.Username" />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-5">
                <p class="lead">@Model.FirstName @Model.LastName</p>
                <p class="lead">@Model.Level</p>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-lg-2 col-lg-offset-5">
                    <div class="btn-group hidden-print">
                        <button type="button" class="btn btn-info dropdown-toggle btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-cogs fa-fw"></i> Opciones <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            @if (User.Identity.Name.Equals(Model.Username) || User.IsInRole("Admin"))
                            {
                                <li>
                                    <a asp-action="edit">Editar perfil</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li role="separator" class="divider"></li>
                                <li>
                                    <a asp-action="Letter">Descargar carta</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>

        <div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#events" aria-controls="home" role="tab" data-toggle="tab">Asistencias</a></li>
                <li role="presentation"><a href="#problems" aria-controls="profile" role="tab" data-toggle="tab">Problemas resueltos</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content" ng-app="app-attended-events">
                <div ng-controller="attendedEventsController as vm" role="tabpanel" class="tab-pane active" id="events">
                    <table class="table table-responsive">
                        <thead>
                            <tr>
                                <th>Evento</th>
                                <th>Ubicación</th>
                                <th>Fecha</th>
                                <th>Duración</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="user in vm.queriedUsers">
                                <td>{{ user.name }}</td>
                                <td>{{ user.location }}</td>
                                <td>{{ user.start | date:'medium' }}</td>
                                <td>{{ user.duration }}</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3">
                                    <div class="btn-group" role="group" aria-label="...">
                                        <button ng-click="vm.previousPage();" class="btn btn-default" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </button>
                                        <button type="button" class="btn btn-default">
                                            {{ vm.currentPage }} / {{ vm.totalPages }}
                                        </button>
                                        <button ng-click="vm.nextPage();" class="btn btn-default" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </button>
                                    </div>

                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="problems">...</div>
            </div>

        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/controllers/app-attended-events.js"></script>
    <script src="~/js/controllers/attendedEventsController.js"></script>
}